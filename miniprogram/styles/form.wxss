.form-submit-btn {
	margin: 20px 15px;
	height: 40px;
	line-height: 40px;
	border-radius: 5px;
	color: white;
	font-size: 17px;
	text-align: center;
	background: #4252dd;
}

.form-bg {
	margin: 10px;
	border-radius: 5px;
	box-shadow: 0px 0px 5px 3px rgba(0, 0, 0, 0.1);
}

.header-bg {
	display: flex;
	padding: 15px;
	/*border-bottom: 1px solid #E6E6E6;*/
}

.header-title {
	color: rgb(50, 50, 50);
	font-weight: 500;
}

.header-line {
	height: 2px;
	margin: 0px 10px;
	background: rgb(242, 242, 242);
}

.form-row {
	display: flex;
	align-items: center;
	padding: 10px 15px;
}

.form-title {
	flex: 25;
	font-size: 15px;
	color: rgb(50, 50, 50);
}

.bold {
	font-weight: bold;
}

.form-star-title {
	flex: 25;
	font-size: 15px;
	color: rgb(50, 50, 50);
}

.form-star-title:before {
	content: '*';
	color: #f56c6c;
	margin-left: -10px;
	margin-right: 3px;
}

.form-info {
	flex: 75;
	font-size: 15px;
	word-break: break-all;
	color: rgb(100, 100, 100);
}

.right-arrow {
	width: 7px;
	height: 14px;
	background-image: url("../../../../icon/right-b.png");
	background-position: center;
	background-size: 7px 14px;
	background-repeat: no-repeat;
}

.form-line {
	height: 2px;
	margin: 0px 10px;
	background: rgb(242, 242, 242);
}

.line {
	height: 10px;
	background: rgb(242, 242, 242);
}

