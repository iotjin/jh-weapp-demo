.waveTopAnimation {
  animation: move_wave 10s linear infinite;
}

.waveMiddleAnimation {
  animation: move_wave 20s linear infinite;
}

.waveBottomAnimation {
  animation: move_wave 12s linear infinite;
}

.bgTop {
  z-index: 15;
  opacity: 0.75;
  height: 16px;
}

.bgMiddle {
  z-index: 10;
  opacity: 0.8;
  height: 18px;
}

.bgBottom {
  z-index: 20;
  height: 12px;
  opacity: 1
}

@keyframes move_wave {
  0% {
      transform: translateX(0) translateZ(0) scaleY(1);
  }

  50% {
      transform: translateX(-25%) translateZ(0) scaleY(1);
  }

  100% {
      transform: translateX(-50%) translateZ(0) scaleY(1);
  }
}

/* 头像 */


.userinfo-sec {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
}

.userinfo-sec .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: block;
  overflow: hidden;
  margin-bottom: 20rpx;
}

