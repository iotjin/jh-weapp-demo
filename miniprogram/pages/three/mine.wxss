.header {
  position: relative;
  height:300rpx;
  background: linear-gradient(to bottom, #56ccf2, #2f80ed);
}

.wave-bg {
  display: flex;
  justify-content: center;
  align-items: center;
}

.wave-wrapper {
  width: 100%;
  height: 330rpx;
  background: linear-gradient(129deg, rgba(245, 195, 88, 1), rgba(243, 167, 80, 1), rgba(235, 121, 60, 1));
  position: relative;
}

.wave {
  position: absolute;
  left: 0;
  width: 2160rpx;
  height: 100%;
  background-position: 0 bottom;
  transform-origin: center bottom;
}

.waveWrapperInner {
  position: absolute;
  width: 100%;
  overflow: hidden;
  height: 100%;
  bottom: -1px;
}

