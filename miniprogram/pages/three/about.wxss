.content {
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  border-radius: 70rpx;
}

.appName {
  padding-top: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.versionNum {
  padding-top: 20rpx;
  font-size: 25rpx;
  color: rgb(50, 50, 50);
}

.bg {
  width: 90%;
  margin: 0 auto;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0px 0px 10px rgb(220, 220, 220);
}

.footer {
  text-align: center;
  font-size: 24rpx;
  height: 50rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  margin-bottom: 10rpx;
}