page{
  width: 100%;
  height:100%;
}

.header{
  background: rgb(8, 117, 94);
  color: #fff;
  line-height: 100rpx;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
}
.main{
  flex: 1;
  position: relative;
  margin-top: 10px;
  margin-bottom: 10px;
}
.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;

}

.item-content {
  /* background: transparent !important; *//* height: 50rpx !important; */
  padding: 0px !important;
  margin: 0px !important;
}

.item {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 3px;
  border: 1px solid #c7c7c7;
  background: white;
  color: black;
}

.itemSel {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 3px;
  border: 1px solid red;
  color: white;
  background: red;
}
.footer{
  background: rgb(8, 117, 94);
  color: #fff;
  line-height: 400rpx;
  flex: 0 0 400rpx; /* 不放大不缩小固定100rpx */
}