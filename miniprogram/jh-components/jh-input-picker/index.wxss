.pickerHeader {
  display: flex;
  height: 100rpx;
  background: white;
}

.pickerCancel {
  flex: 1;
  padding-left: 10rpx;
  padding-right: 20rpx;
}

.pickerTitle {
  flex: 8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
}

.pickerConfirm {
  flex: 1;
  display: flex;
  align-items: center;
  color: rgb(50, 50, 50);
  font-size: 16px;
  padding: 0 25rpx;
}

.textarea-bg {
  background: #fff;
  padding: 30rpx;
  width: 90%;
}

.word {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}